<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Employee Filter System</title>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f6f9;
        text-align: center;
        padding: 30px;
    }

    select, button {
        padding: 8px 12px;
        margin: 10px;
        font-size: 14px;
    }

    table {
        margin: 20px auto;
        border-collapse: collapse;
        width: 70%;
        background: white;
    }

    th, td {
        border: 1px solid #ccc;
        padding: 8px;
        text-align: center;
    }

    th {
        background-color: #007bff;
        color: white;
    }
</style>
</head>
<body>

<h2>Employee Management System</h2>


<select id="jobSelect">
    <option value="All">All Employees</option>
    <option value="Manager">Manager</option>
    <option value="Salesman">Salesman</option>
    <option value="Clerk">Clerk</option>
</select>

<button onclick="showEmployees()">Show Emps</button>


<div id="output"></div>

<script>

const employees = [
    { id: 101, name: "Ravi", job: "Manager", salary: 60000 },
    { id: 102, name: "Priya", job: "Salesman", salary: 30000 },
    { id: 103, name: "Amit", job: "Clerk", salary: 20000 },
    { id: 104, name: "Sneha", job: "Manager", salary: 65000 },
    { id: 105, name: "Kiran", job: "Salesman", salary: 28000 }
];


function showEmployees() {

    const selectedJob = document.getElementById("jobSelect").value;

    let filteredEmployees;

    if (selectedJob === "All") {
        filteredEmployees = employees;
    } else {
        filteredEmployees = employees.filter(emp => emp.job === selectedJob);
    }

    let table = `
        <table>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Job</th>
                <th>Salary</th>
            </tr>
    `;

    filteredEmployees.forEach(emp => {
        table += `
            <tr>
                <td>${emp.id}</td>
                <td>${emp.name}</td>
                <td>${emp.job}</td>
                <td>${emp.salary}</td>
            </tr>
        `;
    });

    table += `</table>`;

    document.getElementById("output").innerHTML = table;
}

</script>

</body>
</html>
